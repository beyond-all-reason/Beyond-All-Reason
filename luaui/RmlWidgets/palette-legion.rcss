.bg-accent-alpha { background-color: #5a803080; }
.text-accent-alpha { color: #5a803080; }
.border-accent-alpha { border-color: #5a803080; }

/* === MUTED GREEN (#b4d48a) === */
.bg-muted { background-color: #b4d48a; }
.text-muted { color: #b4d48a; }
.border-muted { border-color: #b4d48a; }
.bg-muted-alpha { background-color: #b4d48a80; }
.text-muted-alpha { color: #b4d48a80; }
.border-muted-alpha { border-color: #b4d48a80; }

/* === SURFACE GREEN (#d9e8c7) === */
.bg-surface { background-color: #d9e8c7; }
.text-surface { color: #d9e8c7; }
.border-surface { border-color: #d9e8c7; }
.bg-surface-alpha { background-color: #d9e8c780; }
.text-surface-alpha { color: #d9e8c780; }
.border-surface-alpha { border-color: #d9e8c780; }

/* === DARK GREEN (#3e5a22) === */
.bg-primary-dark { background-color: #3e5a22; }
.text-primary-dark { color: #3e5a22; }
.border-primary-dark { border-color: #3e5a22; }
.bg-primary-dark-alpha { background-color: #3e5a2280; }
.text-primary-dark-alpha { color: #3e5a2280; }
.border-primary-dark-alpha { border-color: #3e5a2280; }

/* === Box Shadow === */
.box-shadow-primary { box-shadow: #7eb141 4dp 4dp 0dp 0dp; }

/* === Text Shadow === */
.text-shadow-primary { font-effect: shadow( 4px 4px #7eb141 ); }
.text-glow-primary { font-effect: glow(4px 6px 0px 0px #7eb141); }
