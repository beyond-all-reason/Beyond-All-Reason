/* Root container - full screen overlay */
.qs-root {
	position: absolute;
	left: 0px;
	top: 0px;
	width: 1920px;
	height: 1080px;
	z-index: 10000;
	font-family: Exo 2;
	pointer-events: none;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}

.hidden {
	display: none;
}

/* Juice bar overlay */
.qs-juice-overlay {
	position: absolute;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	pointer-events: none;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	padding-left: 30.2%;
	padding-top: -5px;
	box-sizing: border-box;
}

.qs-juice-container {
	background-color: rgba(50, 50, 50, 255);
	border-radius: 6px;
	padding: 8px;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.qs-juice-header {
	color: #ffffff;
	font-size: 17px;
	font-weight: bold;
	font-effect: outline(1px black);
	margin-bottom: 1px;
	pointer-events: none;
	text-align: center;
}

.qs-juice-bar {
	position: relative;
	width: 594px;
	height: 11px;
	background-color: rgba(0, 0, 0, 0.9);
	border-width: 2px;
	border-color: rgba(0, 255, 0, 0.8);
	border-radius: 6px;
	overflow: hidden;
	box-sizing: border-box;
	z-index: 10001;
}

.qs-juice-track {
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 50, 0, 0.3);
	z-index: 3;
}

.qs-juice-fill {
	position: absolute;
	left: 0px;
	top: 0px;
	height: 100%;
	width: 50%;
	background-color: #00ff00;
	z-index: 3;
	box-sizing: border-box;
}

.qs-juice-projected {
	position: absolute;
	left: 0px;
	top: 0px;
	height: 100%;
	width: 0%;
	background-color: #00cc00;
	z-index: 2;
	pointer-events: none;
	box-sizing: border-box;
}

.qs-juice-text {
	display: none;
}

/* Centered warning text */
.qs-warning-text {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	color: #ffffff;
	font-size: 24px;
	font-weight: bold;
	text-align: center;
	font-effect: outline(2px black);
	pointer-events: none;
	z-index: 1000;
	background-color: rgba(0, 0, 0, 0.7);
	padding: 15px 30px;
	border-radius: 8px;
	border-width: 2px;
	border-color: rgba(255, 255, 255, 0.3);
	box-sizing: border-box;
}

/* Factory section */
.qs-factory-section {
	position: absolute;
	left: 50%;
	top: 60%;
	transform: translate(-50%, -50%);
	pointer-events: none;
	z-index: 1000;
}

.qs-factory-text {
	color: #ffffff;
	font-size: 20px;
	text-align: center;
	font-effect: outline(1px black);
	background-color: rgba(0, 0, 0, 0.7);
	padding: 10px 20px;
	border-radius: 6px;
	border-width: 1px;
	border-color: rgba(255, 255, 255, 0.3);
	box-sizing: border-box;
}

.qs-factory-text.placed {
	opacity: 0.6;
	color: #aaaaaa;
}

.qs-factory-text.discount-used {
	color: #00ff00;
}

.qs-factory-text.placed.discount-used {
	color: #00aa00;
	opacity: 0.8;
}
    

