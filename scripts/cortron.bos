#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, emit, vents, fliptop, riser;

static-var  gun_1, restore_delay, statechg_DesiredState, statechg_StateChanging;

// Signal definitions
#define SIG_AIM				2


