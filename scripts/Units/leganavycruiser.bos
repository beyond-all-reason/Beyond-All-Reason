AimWeapon2(heading, pitch)
{
	signal SIGNAL_AIM2;
	set-signal-mask SIGNAL_AIM2;
	aimDir2 = heading;
    turn frontTurretHeadingPivot to y-axis heading speed <300.0>;
    turn dcTurret to x-axis <0.0> - pitch speed <200.0>;
    wait-for-turn frontTurretHeadingPivot around y-axis;
    wait-for-turn dcTurret around x-axis;
	start-script RestoreDeckWeapon();
	return (1);
}

FireWeapon2()
{
	sleep 100;
	RB_RECOILBOAT(aimDir2, RB_RECOIL_ENERGY_2);
}

