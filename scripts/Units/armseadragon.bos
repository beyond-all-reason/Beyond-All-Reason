AimWeapon2 (heading, pitch)
{
	signal SIGNAL_AIM2;
	set-signal-mask SIGNAL_AIM2;
	start-script OpenSilo();
	if (silo_state == 2)
	{
		return (1);
	}
	return (0);
}

FireWeapon2 ()
{
	shotcount = shotcount + 1;
	call-script lua_UnitScriptLight(1, shotcount);
	call-script lua_UnitScriptLight(2, shotcount);
	start-script CloseSilo_Fired();
	return (0);
}

QueryWeapon2 (piecenum)
{
	piecenum = flare;
	return (0);
}




SetStockpile (num_stockpiled)
{
	if (num_stockpiled == 0)
	{
		
		if (NOT firing) {
			hide firing;
			hide firing1;
			hide firing2;
		}
		
		sleep 100;
		missiles_stockpiled = 0;
	}
	if (num_stockpiled >= 1)
	{
		show firing;
		show firing1;
		show firing2;
		sleep 100;
		missiles_stockpiled = 1;
	}
}



Propcontrol ()
{
	var currentSpeed;
	while (1)
	{
		currentSpeed = (get CURRENT_SPEED)*1000/TB_maxSpeed;	
		spin prop1 around z-axis speed <1.0>*currentSpeed accelerate <10.0>;
		spin prop2 around z-axis speed <1.0>*currentSpeed accelerate <10.0>;
		sleep 100;
	}
}



StartMoving ()
{
	signal SIGNAL_MOVE;
	set-signal-mask SIGNAL_MOVE;
	start-script Propcontrol ();
	while( TRUE )
	{
		emit-sfx 1024 + 0 from wake;
		sleep 250;
		emit-sfx 1024 + 0 from wake;
		emit-sfx 1024 + 1 from wake;
		sleep 250;
	}
}

StopMoving ()
{
	signal SIGNAL_MOVE;
	stop-spin prop1 around z-axis decelerate <10.0>;
	stop-spin prop2 around z-axis decelerate <10.0>;
}


Killed (severity, corpsetype)
{
	if ( severity <= 25 )
	{
		corpsetype = 1 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		return(corpsetype);
	}
	if ( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		return(corpsetype);
	}
	if ( severity <= 99 )
	{
		corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		return(corpsetype);
	}
	corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
	return corpsetype;
}
