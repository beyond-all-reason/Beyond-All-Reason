	hide thrustm;
	hide link;
	turn jetl to x-axis <-90.000000> now;
	turn jetr to x-axis <-90.000000> now;
	Static_Var_1 = 0;
	call-script InitState();
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	start-script IdleHover();
}


