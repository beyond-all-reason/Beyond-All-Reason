{
	if( TRUE )
	{
		move leg1 to y-axis [3.750000] speed [32.500000];
		sleep 12;
	}
	if( TRUE )
	{
		move leg1 to z-axis [75.000000] speed [32.500000];
		sleep 164;
	}
