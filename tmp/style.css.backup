body {
  color: white;
  font-size: 18px;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

img {
  max-width: 100px;
}

td {
    text-align: center; /* Center text in all cells */
}

td.align-left {
  text-align: left
}

th {
  padding: 0 35px;
}

.leader {
  font-size: 1.1em;
}

.first {
  font-size: 1.3em;
  font-weight: bold;
}

.score {
  font-size: 1.1em;
}

.first-leader-score {
  font-weight: bold;
  font-size: 1.4em;
}

td.emptySpacing {
  padding-top: 25px;
}

.buttons-area {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.button {
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
  border: none;
  border-radius: 5px;
  color: white;
  margin: 10px;
  transition: background-color 0.2s;
}

.show-graph {
  background-color: #007bff;
}

.leave {
  background-color: #dc3545;
  color: white;
}

.button:hover {
    opacity: 0.8;
}

.button:active {
    background-color: #0056b3;
}

.leave:active {
    background-color: #a71d2a;
}
